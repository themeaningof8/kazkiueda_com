{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/payload-types.ts",
      "!**/src/payload-types.ts",
      "!**/src/app/(payload)/admin/importMap.js",
      "!**/*.config.js",
      "!**/*.config.ts",
      "!**/*.config.mjs",
      "!**/bun.lock"
    ]
  }
}
